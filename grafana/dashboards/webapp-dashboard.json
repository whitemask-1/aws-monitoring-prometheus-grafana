{
    "dashboard": {
      "id": null,
      "title": "My Web Application Dashboard",
      "tags": ["webapp", "devops"],
      "timezone": "browser",
      "panels": [
        {
          "id": 1,
          "title": "Application Status",
          "type": "stat",
          "targets": [
            {
              "expr": "up{job=\"my-webapp-local\"}",
              "refId": "A"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "mappings": [
                {
                  "options": {
                    "0": {
                      "text": "DOWN",
                      "color": "red"
                    },
                    "1": {
                      "text": "UP",
                      "color": "green"
                    }
                  },
                  "type": "value"
                }
              ]
            }
          },
          "gridPos": {
            "h": 8,
            "w": 12,
            "x": 0,
            "y": 0
          }
        },
        {
          "id": 2,
          "title": "HTTP Requests per Second",
          "type": "graph",
          "targets": [
            {
              "expr": "rate(http_requests_total[5m])",
              "refId": "A"
            }
          ],
          "gridPos": {
            "h": 8,
            "w": 12,
            "x": 12,
            "y": 0
          }
        },
        {
          "id": 3,
          "title": "Response Time",
          "type": "graph",
          "targets": [
            {
              "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
              "refId": "A"
            }
          ],
          "gridPos": {
            "h": 8,
            "w": 24,
            "x": 0,
            "y": 8
          }
        }
      ],
      "time": {
        "from": "now-1h",
        "to": "now"
      },
      "refresh": "5s"
    }
  }